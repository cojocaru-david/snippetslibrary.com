            "text/javascript",
            "text/typescript",
            "text/python",
            "text/html",
            "text/css",
            "text/json",
            "text/xml",
            "text/markdown",
            "application/json",
            "application/javascript",
            "application/typescript"
          ]
        }
      ]
    }
