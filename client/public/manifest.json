      "purpose": "any maskable"
    },
    {
      "src": "/icons/android-icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Create New Snippet",
      "short_name": "New Snippet",
      "description": "Create a new code snippet",
      "url": "/create",
      "icons": [
        {
          "src": "/icons/android-icon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": [
            "text/plain",
            "text/javascript",
            "text/typescript",
            "text/python",
            "text/html",
            "text/css",
            "text/json",
            "text/xml",
            "text/markdown",
            "application/json",
            "application/javascript",
            "application/typescript"
          ]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+snippetslibrary",
      "url": "/share?url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/file-handler",
      "accept": {
        "text/plain": [".txt", ".md", ".js", ".ts", ".py", ".html", ".css", ".json", ".xml"],
        "text/javascript": [".js", ".jsx", ".mjs"],
        "text/typescript": [".ts", ".tsx"],
        "text/python": [".py", ".pyw"],
        "text/html": [".html", ".htm"],
        "text/css": [".css", ".scss", ".sass", ".less"],
        "application/json": [".json"],
        "text/xml": [".xml"],
        "text/markdown": [".md", ".markdown"]
      }
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  }
}
